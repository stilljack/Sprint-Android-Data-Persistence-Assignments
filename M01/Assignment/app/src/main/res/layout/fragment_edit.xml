<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragcl"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    tools:context=".view.EditFragment"
    android:background="@color/bgRegular">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/et_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="0dp"
        android:background="@color/bgRegular"/>

    <EditText
        android:id="@+id/et_rtr"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="reason to read\n\n\n\n"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        android:elevation="0dp"
        android:background="@color/bgRegular"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/chkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="read?"
        app:layout_constraintRight_toRightOf="@id/et_rtr"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="2dp"
        android:background="@color/bgRegular"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_rtr"
        android:elevation="2dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>